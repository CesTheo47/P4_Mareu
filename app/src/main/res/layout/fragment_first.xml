<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ImageView
        android:id="@+id/color_reu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/item_reunion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="RÃ©union A - "
        app:layout_constraintBottom_toBottomOf="@id/color_reu"
        app:layout_constraintStart_toEndOf="@id/color_reu"
        app:layout_constraintTop_toTopOf="@id/color_reu"/>

    <TextView
        android:id="@+id/item_reunion_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14h00 - "
        app:layout_constraintBottom_toBottomOf="@id/color_reu"
        app:layout_constraintStart_toEndOf="@id/item_reunion_name"
        app:layout_constraintTop_toTopOf="@id/color_reu"/>

    <TextView
        android:id="@+id/item_reunion_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peach"
        app:layout_constraintBottom_toBottomOf="@id/color_reu"
        app:layout_constraintStart_toEndOf="@id/item_reunion_date"
        app:layout_constraintTop_toTopOf="@id/color_reu"/>

    <TextView
        android:id="@+id/item_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="theophilcestaro96@gmail.com, "
        app:layout_constraintStart_toEndOf="@id/color_reu"
        app:layout_constraintTop_toBottomOf="@id/item_reunion_date"/>

    <ImageButton
        android:id="@+id/item_list_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/color_reu"
        app:layout_constraintTop_toTopOf="@id/color_reu"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@null"
        />




</androidx.constraintlayout.widget.ConstraintLayout>